@using VanzTube.Models.ViewModels;
@model ContactViewModel

@{
    ViewBag.Title = "Contact Us";
}

<div class="fix blog_feature_area">
    <div class="fix blog_feature">
        <div class="fix feature_videos floatleft">
            <h2>@ViewBag.Title</h2>
            <div class="form-wrapper">
                @if (ViewBag.IsSuccess)
                {
                    <h4>Thank you for your feedback.</h4>
                }
                else
                {
                    using (Html.BeginForm("Contact", "Page", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>Please Send Your Feedback.</h4>
                            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Comment, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(m => m.Comment, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-default" value="Submit" />
                                </div>
                            </div>
                    }
                }
            </div>

        </div>
        @{Html.RenderAction("MembersVideo", "Page"); }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
